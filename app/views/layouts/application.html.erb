<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Jony Karki | Developer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script src="https://use.fontawesome.com/cc2f89fd42.js"></script>
  <link href="https://fonts.googleapis.com/css?family=Nunito" rel="stylesheet">

</head>
<body>
  
  <!--  Navbar Start -->
  <div class="navbar <%= "black-nav" if !current_page?(root_url) %>">
    <div class="company-title">
      <div class="home-top">JONY KARKI</div>
    </div>
    <div class="navbar-items">
      <% if current_user %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"navbar-item" %>
        <div class="navbar-item"><%= current_user.email %></div>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class:"navbar-item" %>
        <%= link_to "Login", new_user_session_path, class:"navbar-item" %>
      <% end %>
      <div class="navbar-item">Contact</div>
      <div class="navbar-item">Blog</div>
      <div class="navbar-item">Resume</div>
      <!--<div class="navbar-item">About</div>-->
      <%= link_to "Home", root_path, class:"navbar-item" %>
    </div>
  </div>
  <!--  Navbar End  -->
  

<%= yield %>

<!-- End Bar -->
<div class="endbar">
    <div class="endbar-icons-box">
     <!-- Facebook Button -->
      <div class="endbar-items"><a id="facebook" href="https://www.facebook.com/" target="_blank"><i class="fa fa-facebook"></i></a></div>
      <!-- Twitter Button -->
      <div class="endbar-items"><a id="twitter" href="https://twitter.com/" target="_blank"><i class="fa fa-twitter"></i></a></div>
       <!-- Instagram Button -->
        <div class="endbar-items"><a id="instagram" href="https://instagram.com/" target="_blank"><i class="fa fa-instagram"></i></a></div>

      <!-- GitHub Button -->
     <div class="endbar-items"><a id="github" href="https://github.com/" target="_blank"><i class="fa fa-github"></i></a></div>
       <!-- LinkedIn Button -->
       <div class="endbar-items"><a id="linkedin" href="https://www.linkedin.com/in/jony-karki" target="_blank"><i class="fa fa-linkedin"></i></a></div>
    </div>
